<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="50.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.view.controllers.admin.AccountBlockController">
   <children>
      <Label text="Информация об аккаунте">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <VBox spacing="5.0">
         <children>
            <Label fx:id="nameLabel" text="ФИО: ">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="loginLabel" text="Логин:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="phoneLabel" text="Номер телефона">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="emailLabel" text="Электронная почта: ">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="postLabel" text="Должность:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="birthdayLabel" text="Дата рождения:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="salaryLabel" text="Заработная плата: ">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button mnemonicParsing="false" onAction="#onEditButtonClick" text="Редактировать информацию" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
